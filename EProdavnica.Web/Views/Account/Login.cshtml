@model EShop.Domain.Identity.UserLoginDto
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>
<style>
    #naslov {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 10vh;
        font-size: 25px;
    }
    .logindiv {
        margin-left: 250px;
        justify-content: center;
        align-items: center;
    }

    #kopce {
        margin-left: 250px;
        justify-content: center;
        align-items: center;
        background-color: dimgrey;
        width: 120px;
    }
    #tekst {
        margin-left: 200px;
        justify-content: center;
        align-items: center;
        font-size:12px;
    }
</style>
    </head>
<div class="container">
    <div id="naslov">
        <p>Customer login</p>
    </div>
    @Html.ValidationSummary()
    <form asp-action="Login" asp-controller="Account" method="post">

        <div class="logindiv">

            <div class="form-group col-sm-12">
                <label asp-for="@Model.Email" class="col-lg-3 control-label"></label>
                <br>
                <div class="col-lg-9">
                    @Html.TextBoxFor(m => m.Email, new { placeholder = "Email", @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Email)
                </div>
            </div>

            <div class="form-group col-sm-12">
                <label asp-for="@Model.Password" class="col-lg-3 control-label"></label>
                <br>
                <div class="col-lg-9">
                    @Html.PasswordFor(m => m.Password, new { placeholder = "Password", @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Password)
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-12 btn-submit">
                    <button id="kopce" type="submit" class="btn btn-success">Login</button>
                    <br />
                
                    <a id="tekst" asp-action="Register" asp-controller="account">Don't have an account? Click to Register</a>

                </div>
            </div>
        </div>
    </form>
</div>