@model IEnumerable<EShop.Domain.DomainModels.Product>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>
    <style>
        #slika{
            width:300px;
            height:300px;
        }
        #dodajkosnicka {
            justify-content: center;
            align-items: center;
            margin-left:60px;
            
        }
    </style>
</head>
<body style="background-color: #f5eeee">
    
<div class="container">
    <div class="m-3">
        <a class="btn btn-secondary btn-rounded" asp-controller="Products" asp-action="Create">Add new product</a>
    </div>
    @for (int i = 0; i < Model.Count(); i++)
    {
        var item = Model.ToList()[i];

        if (i % 3 == 0)
        {
            @:<div class="row">
            }

            <div class="col-md-3 m-4">
                <div class="card" style="width: 19rem; height: 25rem;">
                    <img id="slika"class="card-img-top" src="@item.ProductImage" style="height: 50%" alt="Image for product!">

                    <div class="card-body">
                        <h5 class="card-title">@item.ProductName</h5>
                        <p class="card-text">@item.ProductDescription</p>

                        <h6><i>Price:</i> <b>@item.ProductPrice $</b></h6>
                    </div>

                    <div class="card-footer">
                        <a id="dodajkosnicka" asp-controller="Products" asp-action="AddProductToCart" asp-route-id="@item.Id" class="btn btn-outline-primary btn-rounded" >Add to Cart</a>
                        <a id="edit" asp-controller="Products" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-dark btn-rounded">Edit</a>
                    </div>
                </div>
            </div>

            if (i % 3 == 2)
            {
            @:</div>
        }
    }
</div>
    </body>
